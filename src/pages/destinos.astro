import BlogHeader from '../components/BlogHeader.astro';
import Footer from '../components/Footer.astro';
import { SITE } from '../config';

const title = "Destinos | " + SITE.title;
const description = "Explora nuestros destinos favoritos. Gu√≠as de viaje reales, sin filtros.";

// Destinos destacados con im√°genes y datos
const destinations = [
  {
    name: "Argentina",
    slug: "argentina",
    emoji: "üá¶üá∑",
    image: "https://images.unsplash.com/photo-1612294037637-ec328d0e075e?w=600&q=80",
    cities: ["Buenos Aires", "Mendoza", "Ushuaia"],
    postsCount: 3
  },
  {
    name: "Espa√±a",
    slug: "espana",
    emoji: "üá™üá∏",
    image: "https://images.unsplash.com/photo-1539037116277-4db20889f2d4?w=600&q=80",
    cities: ["Madrid", "Barcelona", "Sevilla"],
    postsCount: 1
  },
  {
    name: "M√©xico",
    slug: "mexico",
    emoji: "üá≤üáΩ",
    image: "https://images.unsplash.com/photo-1518105779142-d975f22f1b0a?w=600&q=80",
    cities: ["CDMX", "Oaxaca", "Canc√∫n"],
    postsCount: 0
  }
];
---

<html lang="es">
<head>
    <BaseHead {title} {description} permalink={Astro.url.href} />
    <style>
        /* === DESTINATIONS PAGE === */
        :root {
            --brand-blue: #75AADB;
            --accent-gold: #F4B942;
            --page-bg: #F8F9FA;
            --text-main: #2D3748;
            --text-muted: #718096;
            --card-bg: #ffffff;
            --card-border: #E2E8F0;
        }

        @media (prefers-color-scheme: dark) {
            :root {
                --page-bg: #0f172a;
                --text-main: #f1f5f9;
                --text-muted: #94a3b8;
                --card-bg: #1e293b;
                --card-border: #334155;
            }
        }

        body {
            background-color: var(--page-bg);
            color: var(--text-main);
            margin: 0;
            font-family: 'Montserrat', sans-serif;
        }

        .destinations-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 3rem 1.5rem;
        }

        .page-header {
            text-align: center;
            margin-bottom: 3rem;
            animation: fadeInUp 0.8s ease-out;
        }

        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .page-title {
            font-size: clamp(2rem, 5vw, 3rem);
            font-weight: 800;
            margin: 0 0 1rem;
            background: linear-gradient(135deg, var(--text-main), var(--accent-gold), var(--text-main));
            background-size: 200% auto;
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: shimmer 6s linear infinite;
        }

        @keyframes shimmer {
            0% { background-position: -200% center; }
            100% { background-position: 200% center; }
        }

        .page-subtitle {
            font-size: 1.1rem;
            color: var(--text-muted);
            font-family: 'IBM Plex Serif', serif;
            font-style: italic;
        }

        .destinations-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.5rem;
        }

        .destination-card {
            position: relative;
            border-radius: 16px;
            overflow: hidden;
            background: var(--card-bg);
            border: 1px solid var(--card-border);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            text-decoration: none;
            color: inherit;
            display: block;
        }

        .destination-card::before {
            content: '';
            position: absolute;
            inset: 0;
            border-radius: 16px;
            padding: 2px;
            background: linear-gradient(135deg, var(--accent-gold), var(--brand-blue));
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            opacity: 0;
            transition: opacity 0.4s ease;
            z-index: 2;
        }

        .destination-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
        }

        .destination-card:hover::before {
            opacity: 1;
        }

        .card-image {
            position: relative;
            height: 180px;
            overflow: hidden;
        }

        .card-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

        .destination-card:hover .card-image img {
            transform: scale(1.1);
        }

        .card-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(180deg, transparent 40%, rgba(0,0,0,0.7) 100%);
        }

        .card-emoji {
            position: absolute;
            top: 1rem;
            right: 1rem;
            font-size: 2rem;
            filter: drop-shadow(0 2px 4px rgba(0,0,0,0.3));
        }

        .card-content {
            padding: 1.25rem;
        }

        .card-name {
            font-size: 1.25rem;
            font-weight: 800;
            margin: 0 0 0.5rem;
            color: var(--text-main);
        }

        .card-cities {
            font-size: 0.85rem;
            color: var(--text-muted);
            margin: 0 0 1rem;
        }

        .card-stats {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .posts-count {
            font-size: 0.75rem;
            font-weight: 700;
            color: var(--brand-blue);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .explore-btn {
            font-size: 0.75rem;
            font-weight: 700;
            color: var(--accent-gold);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            display: flex;
            align-items: center;
            gap: 4px;
            transition: all 0.3s ease;
        }

        .destination-card:hover .explore-btn {
            gap: 8px;
        }

        /* Coming Soon Section */
        .coming-soon {
            margin-top: 4rem;
            text-align: center;
            padding: 3rem;
            background: var(--card-bg);
            border: 2px dashed var(--card-border);
            border-radius: 16px;
        }

        .coming-soon h3 {
            font-size: 1.5rem;
            margin: 0 0 1rem;
            color: var(--text-main);
        }

        .coming-soon p {
            color: var(--text-muted);
            margin: 0;
        }
    </style>
</head>

<body>
    <BlogHeader />

    <main class="destinations-container">
        <header class="page-header">
            <h1 class="page-title">üìÇ Categor√≠as</h1>
            <p class="page-subtitle">Encuentra posts seg√∫n el pa√≠s que te interesa</p>
        </header>

        <div class="destinations-grid">
            {destinations.map((dest, index) => (
                <a href={`/?tag=${dest.slug}`} class="destination-card" style={`animation-delay: ${index * 0.1}s`}>
                    <div class="card-image">
                        <img src={dest.image} alt={dest.name} loading="lazy" />
                        <div class="card-overlay"></div>
                        <span class="card-emoji">{dest.emoji}</span>
                    </div>
                    <div class="card-content">
                        <h2 class="card-name">{dest.name}</h2>
                        <p class="card-cities">{dest.cities.join(' ¬∑ ')}</p>
                        <div class="card-stats">
                            <span class="posts-count">Ver posts</span>
                            <span class="explore-btn">Ir ‚Üí</span>
                        </div>
                    </div>
                </a>
            ))}
        </div>

        <div class="coming-soon">
            <h3>üó∫Ô∏è ¬øTu destino favorito no est√° aqu√≠?</h3>
            <p>Estamos constantemente explorando nuevos lugares. ¬°Pronto habr√° m√°s!</p>
        </div>
    </main>

    <Footer />
</body>
</html>
