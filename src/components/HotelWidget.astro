---
/**
 * HotelWidget.astro
 * Widget de b√∫squeda de hoteles con Booking.com affiliate
 * Siempre habilitado (control visual, no de Firestore)
 */

// Affiliate ID hardcoded para evitar problemas de permisos Firestore durante build
// Se usa como fallback si no se pasa por props
const DEFAULT_AID = '2424850';

interface Props {
  variant?: 'sidebar' | 'inline';
  defaultDestination?: string;
  affiliateId?: string;
}

const { 
  variant = 'sidebar', 
  defaultDestination = '',
  affiliateId = DEFAULT_AID
} = Astro.props;
---

<div class={`hotel-widget ${variant}`} data-affiliate={affiliateId}>
    <div class="widget-header">
        <span class="widget-icon">üè®</span>
        <h4>Buscar Hoteles</h4>
    </div>
    
    <form class="hotel-form">
        <div class="input-group">
            <label>Destino</label>
            <input 
                type="text" 
                name="destination" 
                placeholder="Ciudad o hotel"
                value={defaultDestination}
                required
            />
        </div>
        
        <div class="input-row">
            <div class="input-group half">
                <label>Check-in</label>
                <input 
                    type="date" 
                    name="checkin"
                    required
                />
            </div>
            <div class="input-group half">
                <label>Check-out</label>
                <input 
                    type="date" 
                    name="checkout"
                    required
                />
            </div>
        </div>
        
        <div class="input-group">
            <label>Hu√©spedes</label>
            <select name="guests">
                <option value="1">1 adulto</option>
                <option value="2" selected>2 adultos</option>
                <option value="3">3 adultos</option>
                <option value="4">4 adultos</option>
            </select>
        </div>
        
        <button type="submit" class="search-btn booking">
            <span>Ver en Booking</span>
            <span class="arrow">‚Üí</span>
        </button>
    </form>
    
    <p class="widget-note">
        <span class="booking-logo">Booking.com</span> ¬∑ Precios y disponibilidad
    </p>
</div>

<script is:inline>
    document.querySelectorAll('.hotel-widget .hotel-form').forEach(form => {
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            const widget = e.target.closest('.hotel-widget');
            const affiliateId = widget?.dataset.affiliate || '2424850';
            
            const destination = e.target.querySelector('input[name="destination"]').value.trim();
            const checkin = e.target.querySelector('input[name="checkin"]').value;
            const checkout = e.target.querySelector('input[name="checkout"]').value;
            const guests = e.target.querySelector('select[name="guests"]').value;
            
            // Formatear fechas para Booking
            const checkinFormatted = checkin.replace(/-/g, '-');
            const checkoutFormatted = checkout.replace(/-/g, '-');
            
            // Construir URL de Booking con affiliate
            const url = `https://www.booking.com/searchresults.html?ss=${encodeURIComponent(destination)}&checkin=${checkinFormatted}&checkout=${checkoutFormatted}&group_adults=${guests}&no_rooms=1&aid=${affiliateId}`;
            
            window.open(url, '_blank');
        });
    });
</script>

