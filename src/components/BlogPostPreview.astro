---
export interface Props {
  post: any;
}

const { post } = Astro.props;
---

<article class="post-card">
  <a href={post.url} class="image-link" aria-hidden="true" tabindex="-1">
    <img 
      src={post.frontmatter.heroImage || post.frontmatter.heroImageLink} 
      alt={post.frontmatter.title} 
      loading="lazy"
    />
  </a>

  <div class="content">
    
    <div class="meta-header">
      <time datetime={post.frontmatter.publishDate}>
        {new Date(post.frontmatter.publishDate).toLocaleDateString('es-ES', {
          year: 'numeric', month: 'short', day: 'numeric',
        })}
      </time>
    </div>

    <h2 class="title">
      <a href={post.url}>{post.frontmatter.title}</a>
    </h2>

    <p class="excerpt">{post.frontmatter.description}</p>
    
    <a href={post.url} class="read-more">Leer más</a>
  </div>
</article>

<style>
  .post-card {
    background: var(--card-bg, #fff);
    border: 1px solid var(--card-border, #eee);
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .post-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 15px rgba(0,0,0,0.05);
    border-color: #F4B942;
  }

  /* --- IMAGEN RESTAURADA --- */
  .image-link {
    display: block;
    width: 100%;
    /* Volvemos a 200px para que luzca bien */
    height: 200px; 
    overflow: hidden;
    flex-shrink: 0;
  }

  .image-link img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
    margin: 0; display: block;
  }

  .post-card:hover .image-link img { transform: scale(1.05); }

  /* CONTENIDO */
  .content {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .meta-header { margin-bottom: 0.3rem; }

  time {
    font-size: 0.7rem;
    color: #94a3b8;
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: 0.5px;
  }

  /* --- TÍTULO (EL AJUSTE QUE PEDISTE) --- */
  .title {
    margin: 0 0 0.5rem 0;
    /* Interlineado muy apretado para que no se vea disperso */
    line-height: .7; 
  }
  
  .title a {
    text-decoration: none;
    color: var(--text-main, #2D3748);
    font-size: 1rem;
    font-weight: 650;
    transition: color 0.2s;
  }
  .title a:hover { color: #75AADB; }

  /* DESCRIPCIÓN */
  .excerpt {
    font-size: 0.85rem;
    color: #64748b;
    /* Apretamos también el texto de descripción */
    line-height: 1.4; 
    margin-bottom: 0.8rem;
	/* AGREGA ESTA LÍNEA: */
    text-align: justify;
    
    /* Mostramos hasta 3 líneas para aprovechar el espacio ganado */
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .read-more {
    margin-top: auto;
    font-size: 0.75rem;
    font-weight: 800;
    color: #F4B942;
    text-decoration: none;
    text-transform: uppercase;
  }
</style>