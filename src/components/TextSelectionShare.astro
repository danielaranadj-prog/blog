    </svg>
  </button>
  <button class="share-quote-btn copy" data-platform="copy" aria-label="Copiar texto">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
      <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
    </svg>
  </button>
</div>

<script is:inline>
  function initTextSelectionShare() {
    const tooltip = document.getElementById('text-share-tooltip');
    if (!tooltip) return;

    let selectedText = '';
    
    // Show tooltip on text selection
    document.addEventListener('mouseup', function(e) {
      // Only trigger in prose content
      const target = e.target;
      const isInProse = target.closest('.prose, article, .content');
      
      if (!isInProse) {
        tooltip.style.display = 'none';
        return;
      }

      const selection = window.getSelection();
      const text = selection.toString().trim();
      
      if (text.length > 10 && text.length < 280) { // Minimum 10 chars, max tweet length
        selectedText = text;
        
        // Position tooltip near selection
        const range = selection.getRangeAt(0);
        const rect = range.getBoundingClientRect();
        
        const tooltipHeight = 50;
        const tooltipWidth = 200;
        
        let top = rect.top + window.scrollY - tooltipHeight - 10;
        let left = rect.left + window.scrollX + (rect.width / 2) - (tooltipWidth / 2);
        
        // Keep tooltip on screen
        if (left < 10) left = 10;
        if (left + tooltipWidth > window.innerWidth - 10) {
          left = window.innerWidth - tooltipWidth - 10;
        }
        if (top < window.scrollY + 10) {
          top = rect.bottom + window.scrollY + 10;
        }
        
        tooltip.style.top = top + 'px';
        tooltip.style.left = left + 'px';
        tooltip.style.display = 'flex';
        
        // Animate in
        setTimeout(() => {
          tooltip.classList.add('visible');
        }, 10);
      } else {
        tooltip.style.display = 'none';
        tooltip.classList.remove('visible');
      }
    });
    
    // Hide tooltip on click outside
    document.addEventListener('mousedown', function(e) {
      if (!tooltip.contains(e.target) && e.target !== tooltip) {
        setTimeout(() => {
          const selection = window.getSelection();
          if (!selection.toString().trim()) {
            tooltip.style.display = 'none';
            tooltip.classList.remove('visible');
          }
        }, 100);
      }
    });
    
    // Share handlers
    tooltip.querySelectorAll('.share-quote-btn').forEach(btn => {
      btn.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        const platform = this.getAttribute('data-platform');
        const pageUrl = window.location.href;
        const pageTitle = document.title;
        
        let shareUrl = '';
        
        switch(platform) {
          case 'twitter':
            shareUrl = `https://twitter.com/intent/tweet?text=${encodeURIComponent('"' + selectedText + '" - ' + pageTitle)}&url=${encodeURIComponent(pageUrl)}`;
            window.open(shareUrl, '_blank', 'width=550,height=420');
            break;
            
          case 'facebook':
            shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(pageUrl)}&quote=${encodeURIComponent(selectedText)}`;
            window.open(shareUrl, '_blank', 'width=550,height=420');
            break;
            
          case 'whatsapp':
            shareUrl = `https://wa.me/?text=${encodeURIComponent('"' + selectedText + '"\n\n' + pageTitle + '\n' + pageUrl)}`;
            window.open(shareUrl, '_blank');
            break;
            
          case 'copy':
            navigator.clipboard.writeText(selectedText).then(() => {
              // Show toast notification (will implement next)
              const originalHTML = this.innerHTML;
              this.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"></polyline></svg>';
              setTimeout(() => {
                this.innerHTML = originalHTML;
              }, 1500);
            });
            break;
        }
        
        // Hide tooltip after share
        setTimeout(() => {
          tooltip.style.display = 'none';
          tooltip.classList.remove('visible');
          window.getSelection().removeAllRanges();
        }, 300);
      });
    });
  }
  
  // Initialize
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTextSelectionShare);
  } else {
    initTextSelectionShare();
  }
  
  // Support for Astro view transitions
  document.addEventListener('astro:page-load', initTextSelectionShare);
</script>

<style>
  .text-share-tooltip {
    position: absolute;
    z-index: 10000;
    display: flex;
    gap: 0.5rem;
    padding: 0.75rem;
    
    /* Premium glassmorphism */
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    
    border: 1px solid rgba(117, 170, 219, 0.3);
    border-radius: 50px;
    
    box-shadow: 
      0 10px 40px rgba(0, 0, 0, 0.15),
      0 4px 12px rgba(117, 170, 219, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.8);
    
    /* Initial state */
    opacity: 0;
    transform: translateY(-10px) scale(0.95);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: all;
  }
  
  .text-share-tooltip.visible {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
  
  /* Dark mode */
  @media (prefers-color-scheme: dark) {
    .text-share-tooltip {
      background: rgba(15, 23, 42, 0.95);
      border-color: rgba(117, 170, 219, 0.4);
      box-shadow: 
        0 10px 40px rgba(0, 0, 0, 0.5),
        0 4px 12px rgba(117, 170, 219, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }
  }
  
  /* Arrow pointer */
  .text-share-tooltip::after {
    content: '';
    position: absolute;
    bottom: -6px;
    left: 50%;
    transform: translateX(-50%) rotate(45deg);
    width: 12px;
    height: 12px;
    background: inherit;
    border-right: 1px solid rgba(117, 170, 219, 0.3);
    border-bottom: 1px solid rgba(117, 170, 219, 0.3);
  }
  
  @media (prefers-color-scheme: dark) {
    .text-share-tooltip::after {
      border-right-color: rgba(117, 170, 219, 0.4);
      border-bottom-color: rgba(117, 170, 219, 0.4);
    }
  }
  
  /* Share buttons */
  .share-quote-btn {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }
  
  .share-quote-btn::before {
    content: '';
    position: absolute;
    inset: 0;
    background: currentColor;
    opacity: 0.1;
    transition: opacity 0.3s ease;
  }
  
  .share-quote-btn:hover {
    transform: translateY(-3px) scale(1.1);
  }
  
  .share-quote-btn:active {
    transform: translateY(-1px) scale(1.05);
  }
  
  /* Platform colors */
  .share-quote-btn.twitter {
    background: #000000;
    color: white;
  }
  
  .share-quote-btn.twitter:hover {
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.35);
  }
  
  .share-quote-btn.facebook {
    background: #1877F2;
    color: white;
  }
  
  .share-quote-btn.facebook:hover {
    box-shadow: 0 6px 20px rgba(24, 119, 242, 0.4);
  }
  
  .share-quote-btn.whatsapp {
    background: #25D366;
    color: white;
  }
  
  .share-quote-btn.whatsapp:hover {
    box-shadow: 0 6px 20px rgba(37, 211, 102, 0.4);
  }
  
  .share-quote-btn.copy {
    background: linear-gradient(135deg, #F4B942, #FFA500);
    color: #000;
  }
  
  .share-quote-btn.copy:hover {
    box-shadow: 0 6px 20px rgba(244, 185, 66, 0.5);
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .text-share-tooltip {
      padding: 0.6rem;
      gap: 0.4rem;
    }
    
    .share-quote-btn {
      width: 32px;
      height: 32px;
    }
    
    .share-quote-btn svg {
      width: 14px;
      height: 14px;
    }
  }
</style>
