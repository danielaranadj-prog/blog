---
/**
 * ImageLightbox.astro
 * Modal lightbox para ver imágenes en pantalla completa
 * Se activa al hacer click en cualquier imagen del artículo
 */
---

<div id="image-lightbox" class="lightbox" aria-hidden="true">
  <div class="lightbox-overlay"></div>
  <div class="lightbox-content">
    <button class="lightbox-close" aria-label="Cerrar">
      <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 6L6 18M6 6l12 12"/>
      </svg>
    </button>
    <img id="lightbox-image" src="" alt="" class="lightbox-img" />
    <div class="lightbox-caption"></div>
  </div>
</div>

<script is:inline>
  function initImageLightbox() {
    const lightbox = document.getElementById('image-lightbox');
    const lightboxImg = document.getElementById('lightbox-image');
    const lightboxCaption = document.querySelector('.lightbox-caption');
    const closeBtn = document.querySelector('.lightbox-close');
    const overlay = document.querySelector('.lightbox-overlay');
    
    if (!lightbox || !lightboxImg) return;

    // Función para abrir lightbox
    function openLightbox(imgSrc, imgAlt) {
      lightboxImg.src = imgSrc;
      lightboxImg.alt = imgAlt;
      if (lightboxCaption) {
        lightboxCaption.textContent = imgAlt || '';
      }
      lightbox.classList.add('active');
      lightbox.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden'; // Prevent scroll
    }

    // Función para cerrar lightbox
    function closeLightbox() {
      lightbox.classList.remove('active');
      lightbox.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = ''; // Restore scroll
      
      // Clear image after animation
      setTimeout(function() {
        lightboxImg.src = '';
      }, 300);
    }

    // Detectar todas las imágenes dentro del contenido del post
    const contentImages = document.querySelectorAll('.prose img, .content img, article img');
    
    contentImages.forEach(function(img) {
      // Hacer clickeable
      img.style.cursor = 'pointer';
      
      // Agregar evento click
      img.addEventListener('click', function(e) {
        e.preventDefault();
        openLightbox(img.src, img.alt || '');
      });
    });

    // Cerrar con botón X
    if (closeBtn) {
      closeBtn.addEventListener('click', closeLightbox);
    }
    
    // Cerrar con click en overlay
    if (overlay) {
      overlay.addEventListener('click', closeLightbox);
    }
    
    // Cerrar con ESC
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && lightbox.classList.contains('active')) {
        closeLightbox();
      }
    });

    // Prevenir cierre al hacer click en la imagen
    lightboxImg.addEventListener('click', function(e) {
      e.stopPropagation();
    });
  }

  // Inicializar cuando el DOM esté listo
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initImageLightbox);
  } else {
    initImageLightbox();
  }
  
  // Re-inicializar en navegaciones de Astro
  document.addEventListener('astro:page-load', initImageLightbox);
</script>

<style>
  .lightbox {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10000;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }
  
  .lightbox.active {
    opacity: 1;
    visibility: visible;
  }
  
  /* Overlay oscuro con blur */
  .lightbox-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.95);
    backdrop-filter: blur(10px);
  }
  
  /* Contenido del lightbox */
  .lightbox-content {
    position: relative;
    z-index: 10001;
    max-width: 90vw;
    max-height: 90vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    animation: zoomIn 0.3s ease;
  }
  
  @keyframes zoomIn {
    from {
      transform: scale(0.8);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }
  
  /* Imagen */
  .lightbox-img {
    max-width: 100%;
    max-height: 85vh;
    width: auto;
    height: auto;
    object-fit: contain;
    border-radius: 8px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.8);
  }
  
  /* Caption */
  .lightbox-caption {
    margin-top: 1rem;
    padding: 0.75rem 1.5rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 24px;
    color: #fff;
    font-size: 0.95rem;
    text-align: center;
    max-width: 80%;
  }
  
  /* Botón cerrar */
  .lightbox-close {
    position: absolute;
    top: -60px;
    right: 0;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: #fff;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }
  
  .lightbox-close:hover {
    background: rgba(255, 255, 255, 0.25);
    transform: rotate(90deg);
  }
  
  .lightbox-close:active {
    transform: rotate(90deg) scale(0.95);
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .lightbox-content {
      max-width: 95vw;
      max-height: 95vh;
    }
    
    .lightbox-img {
      max-height: 80vh;
    }
    
    .lightbox-close {
      top: 20px;
      right: 20px;
      width: 40px;
      height: 40px;
    }
    
    .lightbox-caption {
      font-size: 0.85rem;
      max-width: 90%;
    }
  }
  
  /* Efecto de salida */
  .lightbox:not(.active) .lightbox-content {
    animation: zoomOut 0.3s ease;
  }
  
  @keyframes zoomOut {
    from {
      transform: scale(1);
      opacity: 1;
    }
    to {
      transform: scale(0.8);
      opacity: 0;
    }
  }
</style>
