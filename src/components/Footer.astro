<style>
    /* === FOOTER - PREMIUM UPGRADE === */
    .brand-col      { grid-area: brand; }
    .nav-col        { grid-area: nav; }
    .social-col     { grid-area: social; }
    .newsletter-col { grid-area: news; }

    .site-footer {
        background: linear-gradient(180deg, #1A202C 0%, #0f1419 100%);
        color: #E2E8F0;
        padding: 3rem 0 1rem 0; 
        margin-top: 4rem;
        border-top: 3px solid;
        border-image: linear-gradient(90deg, #F4B942, #75AADB, #F4B942) 1;
        font-family: 'Montserrat', sans-serif;
        font-size: 0.9rem;
        position: relative;
        overflow: hidden;
    }

    /* Subtle gradient glow */
    .site-footer::before {
        content: '';
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 60%;
        height: 1px;
        background: linear-gradient(90deg, transparent, rgba(244, 185, 66, 0.5), transparent);
    }

    .footer-container {
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 2rem;
        display: grid;
        grid-template-columns: auto auto auto; 
        grid-template-rows: auto auto;
        grid-template-areas: 
            "nav social news"
            "brand brand brand";
        justify-content: center; 
        gap: 2rem; 
        align-items: start;
        padding-bottom: 2rem; 
    }

    /* Estilos Generales */
    .footer-title { color: #F4B942; font-size: 0.75rem; font-weight: 800; text-transform: uppercase; margin-bottom: 0.8rem; letter-spacing: 1px; }
    .footer-links { list-style: none; padding: 0; margin: 0; }
    .footer-links li { margin-bottom: 0.3rem; }
    .footer-links a { color: #CBD5E0; text-decoration: none; font-size: 0.85rem; transition: color 0.2s; }
    .footer-links a:hover { color: #F4B942; }

    .social-col { display: flex; flex-direction: column; align-items: flex-start; }
    .social-grid { display: flex; gap: 1rem; }
    .social-grid a { 
        color: #718096; 
        background: rgba(255,255,255,0.05); 
        width: 38px; 
        height: 38px;
        display: flex; 
        align-items: center; 
        justify-content: center; 
        border-radius: 50%; 
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }
    .social-grid a:hover { 
        background: linear-gradient(135deg, #F4B942, #FFA500); 
        color: #1A202C; 
        transform: translateY(-4px) scale(1.1);
        box-shadow: 0 8px 20px rgba(244, 185, 66, 0.35);
        border-color: transparent;
    }

    /* Newsletter */
    .newsletter-col { text-align: left; min-width: 250px; }
    .newsletter-form { display: flex; gap: 0; margin-top: 0.2rem; }
    .input-field { 
        flex: 1; padding: 0.5rem 0.8rem; border-radius: 4px 0 0 4px; border: 1px solid #2D3748; border-right: none; 
        background: #2D3748; color: white; font-size: 0.85rem; min-width: 0; height: 36px; box-sizing: border-box;
    }
    .input-field:focus { outline: none; border-color: #F4B942; }
    .submit-btn { 
        background: #F4B942; color: #1A202C; border: none; border-radius: 0 4px 4px 0; cursor: pointer; 
        padding: 0 1rem; font-weight: bold; font-size: 1.2rem; line-height: 1; transition: background 0.2s; height: 36px;
    }
    .submit-btn:hover { background: #e0a83b; }

    /* Marca Abajo - AJUSTADO PARA CONTENER DISCLAIMER */
    .brand-col {
        text-align: center; border-top: 1px solid rgba(255,255,255,0.05); 
        padding-top: 1.5rem; 
        margin-top: 0.5rem;
        display: flex; justify-content: center; align-items: flex-start; 
        gap: 1rem; flex-wrap: wrap; width: 100%;
    }
    
    .brand-text-wrapper {
        max-width: 600px;
        text-align: left; 
    }

    .footer-brand { color: #F4B942; font-weight: 800; font-size: 1rem; margin: 0; text-transform: uppercase; letter-spacing: -0.5px; white-space: nowrap;}
    .divider { color: #444; font-size: 1.2rem; }
    .footer-desc { color: #718096; font-size: 0.85rem; margin: 0; margin-bottom: 0.5rem; }
    
    /* Disclaimer Legal (Escritorio) */
    .legal-disclaimer {
        font-size: 0.7rem; 
        color: #58667a;    
        line-height: 1.3;
    }

    /* --- BARRA INFERIOR --- */
    .footer-bottom {
        max-width: 1100px;
        margin: 0 auto;
        padding: 1rem 2rem 0;
        border-top: 1px solid rgba(255,255,255,0.05);
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.75rem;
        color: #718096;
    }

    .legal-links a { color: #94a3b8; text-decoration: none; transition: color 0.2s; }
    .legal-links a:hover { color: #F4B942; }

    .made-with { font-weight: 500; }

    /* --- üì± OPTIMIZACI√ìN M√ìVIL SUPER COMPACTA --- */
    @media (max-width: 768px) {
        .site-footer {
            padding: 1.5rem 0 1rem 0; 
        }

        .footer-container { 
            gap: 1rem 0.3rem; 
            padding: 0 1.5rem 0; /* üî• CERO padding abajo para eliminar el hueco */
            justify-content: space-between;
            padding-bottom: 0.2rem; /* M√≠nimo respiro */
        }

        /* T√≠tulos y links */
        .footer-title { font-size: 0.65rem; margin-bottom: 0.4rem; }
        .footer-links a { font-size: 0.75rem; }
        
        /* Social & Newsletter */
        .social-grid { gap: 0.4rem; }
        .social-grid a { width: 28px; height: 28px; }
        .newsletter-col { min-width: 0; text-align: right; }
        .newsletter-form { justify-content: flex-end; }
        .input-field { width: 125px; flex: none; padding: 0.4rem; font-size: 0.75rem; height: 30px; }
        .submit-btn { padding: 0 0.6rem; font-size: 1rem; height: 30px; }

        /* BLOQUE DE MARCA */
        .brand-col { 
            padding-top: 0.8rem; 
            margin-top: 0;
            margin-bottom: 0; /* üî• Eliminamos margen inferior */
            gap: 0.2rem; 
            flex-direction: column; 
            align-items: center; 
        }
        .brand-text-wrapper { text-align: center; } 
        .divider { display: none; } 
        
        /* OCULTAR TAGLINE */
        .footer-desc { display: none; }
        
        /* DISCLAIMER COMPACTO */
        .legal-disclaimer {
            font-size: 0.6rem; 
            line-height: 1.1;  
            margin-top: 0.3rem;
            margin-bottom: 0.5rem; /* Margen m√≠nimo abajo */
            opacity: 0.8;
            max-width: 90%; 
            margin-left: auto; margin-right: auto;
        }
        
        /* BARRA INFERIOR (PEGADITA) */
        .footer-bottom {
            flex-direction: column;
            gap: 0.5rem;
            text-align: center;
            padding-bottom: 1rem;
            padding-top: 0.2rem; /* üî• Muy pegadita al disclaimer */
            border-top: none; /* Quitamos borde para que parezca un solo bloque */
        }
        .legal-links {
            line-height: 1.4; 
        }
    }
</style>