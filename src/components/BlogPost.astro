---
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import Footer from '../components/Footer.astro'

export interface Props {
	content: {
		title: string;
		description: string;
		publishDate: string;
		author?: string;
		heroImage?: string;
        heroImageLink?: string; /* A veces usas Link externo */
		alt?: string;
	};
}

const {
	content: { title, description, publishDate, author, heroImage, heroImageLink, alt },
} = Astro.props;

// Usamos la imagen que venga, ya sea local o link externo
const finalImage = heroImage || heroImageLink;
const permalink = Astro.url.href;
---

<html lang="es">
	<head>
		<BaseHead {title} {description} {permalink} />
        
        <style>
            @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;800&display=swap');

            /* --- MISMAS VARIABLES QUE EN EL INDEX --- */
            :root {
                --page-bg: #F8F9FA; 
                --text-main: #2D3748;
                --text-muted: #718096;
                --brand-blue: #75AADB;
                --accent-gold: #F4B942;
                --card-bg: #FFFFFF;
                --card-border: #E2E8F0;
            }

            body {
                background-color: var(--page-bg);
                color: var(--text-main);
                font-family: 'Montserrat', sans-serif;
                margin: 0;
            }

            /* --- CONTENEDOR MAESTRO --- */
            .main-container-centered {
                max-width: 1900px; margin: 0 auto; padding: 0 2rem; width: 100%; box-sizing: border-box; 
            }

            .page-container {
                display: flex; flex-direction: column; gap: 3rem; margin-top: 2rem;
            }

            /* --- COLUMNA DEL ARTÍCULO --- */
            .article-column {
                width: 100%;
                background: white;
                border-radius: 16px;
                border: 1px solid var(--card-border);
                overflow: hidden; /* Para que la imagen no se salga */
                box-shadow: 0 4px 20px rgba(0,0,0,0.02);
            }

             /* HERO IMAGE DEL POST (Adaptable) */
            .post-hero {
                width: 100%;
                height: 250px; /* MÓVIL: Altura reducida */
                object-fit: cover;
            }

            /* DESKTOP: Altura completa y elegante */
            @media (min-width: 768px) {
                .post-hero {
                    height: 450px; 
                }
            }

            .post-content-wrapper {
                padding: 2rem 1.5rem;
            }

            /* TIPOGRAFÍA DEL POST */
            .post-date {
                font-size: 0.85rem; color: var(--text-muted); text-transform: uppercase; letter-spacing: 1px; margin-bottom: 0.5rem; font-weight: 600;
            }
            
            .post-title {
                font-size: clamp(2rem, 4vw, 3rem);
                font-weight: 800;
                line-height: 1.1;
                margin-top: 0;
                margin-bottom: 1.5rem;
                color: var(--text-main);
            }

            .post-author {
                display: flex; align-items: center; gap: 10px; margin-bottom: 2rem; border-bottom: 1px solid #eee; padding-bottom: 2rem;
            }
            .author-avatar { width: 40px; height: 40px; border-radius: 50%; background: #eee; }
            .author-name { font-weight: 700; font-size: 0.9rem; }

            /* ESTILOS DEL MARKDOWN (H2, P, LI) */
            .prose {
                font-size: 1.1rem;
                line-height: 1.8;
                color: #4A5568;
                max-width: 800px; /* Ancho de lectura cómodo */
                margin: 0 auto; /* Centrado */
            }

            /* Hacemos globales los estilos internos del markdown */
            .prose :global(h2) {
                font-size: 1.8rem; font-weight: 800; color: var(--brand-blue); margin-top: 3rem; margin-bottom: 1rem;
            }
            .prose :global(h3) {
                font-size: 1.4rem; font-weight: 700; margin-top: 2rem; color: var(--text-main);
            }
            .prose :global(p) { margin-bottom: 1.5rem; }
            .prose :global(strong) { color: var(--text-main); font-weight: 700; }
            .prose :global(ul) { margin-bottom: 1.5rem; padding-left: 1.5rem; }
            .prose :global(li) { margin-bottom: 0.5rem; }
            
            /* --- SIDEBAR (Reutilizado) --- */
            .sidebar { width: 100%; display: flex; flex-direction: column; gap: 1.5rem; }
            .sidebar-widget {
                background: #ffffff; border: 1px solid var(--card-border);
                padding: 1.5rem; border-radius: 16px; box-shadow: 0 4px 20px rgba(0,0,0,0.03); 
            }
            .widget-title {
                font-size: 0.9rem; color: var(--brand-blue); margin-top: 0; margin-bottom: 1rem;
                padding-bottom: 0.5rem; border-bottom: 2px solid #E2E8F0; text-transform: uppercase; letter-spacing: 1.2px; font-weight: 800;
            }
            .sidebar-text { font-size: 0.9rem; color: var(--text-muted); line-height: 1.5; }

            /* MEDIA QUERIES */
            @media (min-width: 1024px) {
                .page-container { flex-direction: row; align-items: flex-start; }
                .article-column { flex: 1; } /* El artículo ocupa lo que sobra */
                .sidebar { width: 320px; flex-shrink: 0; position: sticky; top: 2rem; }
                .post-content-wrapper { padding: 4rem; }
            }

            footer { text-align: center; padding: 2rem; color: var(--text-muted); border-top: 1px solid #E2E8F0; margin-top: 4rem; }
            
            /* Botón volver */
            .back-btn {
                display: inline-block; margin-bottom: 2rem; text-decoration: none; 
                font-weight: 700; color: var(--brand-blue); font-size: 0.9rem;
            }
            .back-btn:hover { text-decoration: underline; }
        </style>
	</head>

	<body>
		<BlogHeader />
        
        <div class="wrapper">
            <div class="main-container-centered">
                
                <div style="width: 100%; display:flex; justify-content:center; margin: 2rem 0;">
                     <img src="https://placehold.co/728x90/75AADB/ffffff?text=OFERTA+VUELOS+-40%25" style="max-width:100%; border-radius:8px;" />
                </div>

                <div class="page-container">
                    
                    <main class="article-column">
                        {finalImage && (
                            <img width="1200" height="600" class="post-hero" loading="lazy" src={finalImage} alt={alt} />
                        )}
                        
                        <div class="post-content-wrapper">
                            <a href="/" class="back-btn">← Volver al Blog</a>
                            
                            <div class="post-date">{publishDate}</div>
                            <h1 class="post-title">{title}</h1>
                            
                            <div class="post-author">
                                <div class="author-avatar"></div> <span class="author-name">Por {author || 'Daniel Arana'}</span>
                            </div>

                            <div class="prose">
                                <slot />
                            </div>
                        </div>
                    </main>

                    <aside class="sidebar">
                        
                        <div class="sidebar-widget" style="text-align: center; padding: 0; border: none; box-shadow: none; background: transparent;">
                             <img src="https://placehold.co/300x250/F4B942/ffffff?text=HOTELES+EN+NY" style="border-radius:12px; width:100%; box-shadow: 0 4px 15px rgba(0,0,0,0.1);" />
                        </div>

                        <div class="sidebar-widget">
                            <h3 class="widget-title">Quienes somos</h3>
                            <p class="sidebar-text">
                                Un blog de tips & trips para viajeros reales, basado en experiencia directa, errores, aciertos y decisiones prácticas antes, durante y después del viaje.
                            </p>
                        </div>

                    </aside>

                </div> <div style="width: 100%; display:flex; justify-content:center; margin: 4rem 0;">
                    <img src="https://placehold.co/970x90/2D3748/ffffff?text=PUBLICIDAD+FINAL+(970x90)" style="max-width:100%; border-radius:8px;" />
               </div>

                <footer>
                    <p>&copy; {new Date().getFullYear()} Instante Trips. Todos los derechos reservados.</p>
                </footer>

            </div>
		</div>
	</body>
</html>