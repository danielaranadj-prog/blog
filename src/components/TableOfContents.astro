 */
---

<nav class="toc-container">
    <h4 class="toc-title">En este artÃ­culo</h4>
    <ul id="toc-list" class="toc-list">
        <!-- Se llena con JS -->
    </ul>
</nav>

<script>
    function generateTOC() {
        const article = document.querySelector('.prose'); // Selector del contenido
        const tocList = document.getElementById('toc-list');
        
        if (!article || !tocList) return;

        // Limpiar lista actual
        tocList.innerHTML = '';

        // Buscar headers
        const content = document.querySelector('.prose');
        const headings = content.querySelectorAll('h2, h3');
        
        if (headings.length === 0) {
            document.querySelector('.toc-container').style.display = 'none';
            return;
        }

        headings.forEach((heading, index) => {
            if (!heading.id) {
                const slug = heading.textContent
                    .toLowerCase()
                    .replace(/[^a-z0-9]+/g, '-')
                    .replace(/(^-|-$)+/g, '');
                heading.id = `${slug}-${index}`;
            }
            
            const level = heading.tagName.toLowerCase();
            const text = heading.textContent;
            const id = heading.id;
            
            const item = document.createElement('li'); // Changed from 'div' to 'li' to match original structure
            item.classList.add('toc-item', level);
            
            const link = document.createElement('a');
            link.href = `#${id}`;
            link.textContent = text;
            
            // Force inline styles to override blue links
            const isDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            if (level === 'h2') {
                link.style.color = isDark ? 'rgba(241, 245, 249, 0.95)' : '#2D3748';
                link.style.fontWeight = '600';
            } else {
                link.style.color = isDark ? 'rgba(203, 213, 225, 0.85)' : '#718096';
            }
            link.style.textDecoration = 'none';
            
            link.addEventListener('click', (e) => {
                e.preventDefault();
                const target = document.getElementById(id);
                if (target) {
                    const yOffset = -100;
                    const y = target.getBoundingClientRect().top + window.pageYOffset + yOffset;
                    window.scrollTo({ top: y, behavior: 'smooth' });
                    
                    document.querySelectorAll('.toc-item a').forEach(a => {
                        a.classList.remove('active');
                        // Reset colors
                        const aLevel = a.closest('.toc-item').classList.contains('h2') ? 'h2' : 'h3';
                        const currentDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
                        if (aLevel === 'h2') {
                            a.style.color = currentDark ? 'rgba(241, 245, 249, 0.95)' : '#2D3748';
                        } else {
                            a.style.color = currentDark ? 'rgba(203, 213, 225, 0.85)' : '#718096';
                        }
                    });
                    link.classList.add('active');
                    link.style.color = '#F4B942'; // Active color
                    history.pushState(null, null, `#${id}`); // Keep URL hash update
                }
            });
            
            item.appendChild(link);
            tocList.appendChild(item);
        });
        
        // Listen for system theme changes
        const mediaQuery = window.matchMedia('(prefers-color-scheme: dark)');
        mediaQuery.addEventListener('change', updateLinkColors);
    
        // Observer para activar items al scroll
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const id = entry.target.id;
                    const activeLink = tocList.querySelector(`a[href="#${id}"]`);
                    
                    if (activeLink) {
                        tocList.querySelectorAll('a').forEach(a => a.classList.remove('active'));
                        activeLink.classList.add('active');
                    }
                }
            });
        }, { rootMargin: '-100px 0px -66% 0px' }); // Ajustar zona de activaciÃ³n

        headers.forEach(h => observer.observe(h));
    }
    
    function updateLinkColors() {
        const isDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        document.querySelectorAll('.toc-item a').forEach(link => {
            if (link.classList.contains('active')) {
                link.style.color = '#F4B942';
                return;
            }
            const level = link.closest('.toc-item').classList.contains('h2') ? 'h2' : 'h3';
            if (level === 'h2') {
                link.style.color = isDark ? 'rgba(241, 245, 249, 0.95)' : '#2D3748';
            } else {
                link.style.color = isDark ? 'rgba(203, 213, 225, 0.85)' : '#718096';
            }
        });
    }

    // Ejecutar al cargar
    generateTOC();
    
    // Soporte para View Transitions de Astro (si se llegaran a usar)
    document.addEventListener('astro:page-load', generateTOC);
</script>

<style>
    .toc-container {
        position: sticky;
        top: 6rem;
        padding: 1.75rem;
        
        /* ðŸŽ¨ Premium Glassmorphism */
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(20px) saturate(180%);
        -webkit-backdrop-filter: blur(20px) saturate(180%);
        
        /* ðŸ’Ž Gradient Border */
        border: 1px solid rgba(255, 255, 255, 0.4);
        border-radius: 20px;
        
        /* âœ¨ Premium Shadow */
        box-shadow: 
            0 8px 32px rgba(0, 0, 0, 0.08),
            0 2px 8px rgba(0, 0, 0, 0.04),
            inset 0 1px 0 rgba(255, 255, 255, 0.5);
        
        max-height: calc(100vh - 8rem);
        overflow-y: auto;
        display: none;
        
        /* ðŸŒŸ Subtle gradient overlay */
        position: relative;
        overflow: hidden;
    }
    
    /* Gradient accent line on left */
    .toc-container::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 3px;
        background: linear-gradient(180deg, #F4B942, #75AADB, #F4B942);
        background-size: 100% 200%;
        animation: gradientFlow 4s ease-in-out infinite;
    }
    
    @keyframes gradientFlow {
        0%, 100% { background-position: 0% 0%; }
        50% { background-position: 0% 100%; }
    }

    /* Dark Mode - Automatic system preference */
    @media (prefers-color-scheme: dark) {
        .toc-container {
            background: rgba(15, 23, 42, 0.8);
            border-color: rgba(255, 255, 255, 0.08);
            box-shadow: 
                0 8px 32px rgba(0, 0, 0, 0.3),
                0 2px 8px rgba(0, 0, 0, 0.2),
                inset 0 1px 0 rgba(255, 255, 255, 0.05);
        }
    }

    /* Mostrar solo en pantallas grandes */
    @media (min-width: 1400px) {
        .toc-container { display: block; }
    }

    @media (max-width: 1200px) {
    .toc-sticky {
      display: none;
    }
  }
  
  /* Light mode improvements */
  @media (prefers-color-scheme: light) {
    .toc-sticky {
    --toc-bg: #ffffff;
    --toc-border: rgba(117, 170, 219, 0.25);
    --toc-shadow: 
      0 2px 12px rgba(0, 0, 0, 0.06),
      0 0 0 1px rgba(117, 170, 219, 0.08);
    --toc-title: #2D3748;
    --toc-title-border: rgba(244, 185, 66, 0.4);
    }
  }
  
  /* Default styles - DARK MODE */
  .toc-sticky {
    position: sticky;
    top: 120px;
    background: rgba(30, 41, 59, 0.7); /* Dark background */
    backdrop-filter: blur(12px);
    border: 1px solid rgba(117, 170, 219, 0.2);
    border-radius: 16px;
    padding: 1.5rem;
    box-shadow: 
      0 10px 30px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .toc-title {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: #F4B942; /* Gold for dark mode */
    margin: 0 0 1rem 0;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid rgba(244, 185, 66, 0.3);
    background: linear-gradient(90deg, #F4B942, #75AADB);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  /* LIGHT MODE OVERRIDES - Apply white background only in light mode */
  @media (prefers-color-scheme: light) {
    .toc-sticky {
      background: #ffffff;
      border: 1px solid rgba(117, 170, 219, 0.25);
      box-shadow: 
        0 2px 12px rgba(0, 0, 0, 0.06),
        0 0 0 1px rgba(117, 170, 219, 0.08);
    }
    
    .toc-title {
      color: #2D3748;
      border-bottom-color: rgba(244, 185, 66, 0.4);
    }
    
    .toc-container a,
    .toc-container a:link,
    .toc-container a:visited,
    .toc-list a {
      color: #4A5568 !important;
    }
    
    .toc-item.h2 a,
    .toc-item.h2 a:link,
    .toc-item.h2 a:visited {
      color: #2D3748 !important;
      font-weight: 600;
    }
    
    .toc-item.h3 a,
    .toc-item.h3 a:link,
    .toc-item.h3 a:visited {
      color: #718096 !important;
    }
    
    .toc-list a:hover {
      color: #2D3748 !important;
      background: rgba(117, 170, 219, 0.1);
    }
    
    .toc-list a.active {
      color: #F4B942 !important;
      background: rgba(244, 185, 66, 0.15);
      border-left-color: #F4B942;
    }
  }

    .toc-list {
        list-style: none;
        padding: 0 0 0 1rem; /* Align with title */
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
    }

    .toc-item {
        position: relative;
    }

    /* Premium link styling */
    .toc-container .toc-list .toc-item a {
        text-decoration: none !important;
        color: rgba(226, 232, 240, 0.9) !important; /* Light gray for dark mode */
        border-bottom: none !important;
        font-size: 0.85rem;
        font-weight: 500;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: block;
        padding: 0.5rem 0.75rem;
        line-height: 1.5;
        border-radius: 10px;
        background: transparent;
        position: relative;
        overflow: hidden;
    }
    
    /* Subtle hover animation */
    .toc-container .toc-list .toc-item a::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 0;
        background: linear-gradient(90deg, rgba(117, 170, 219, 0.1), transparent);
        transition: width 0.3s ease;
    }
    
    .toc-item a:hover::before {
        width: 100%;
    }

    /* H2: Bold and prominent */
    .toc-item.h2 a {
        color: rgba(241, 245, 249, 0.95) !important;
        font-weight: 600;
        font-size: 0.9rem;
    }

    /* H3: Elegant indentation */
    .toc-item.h3 a {
        font-size: 0.8rem;
        padding-left: 2rem;
        color: rgba(203, 213, 225, 0.85) !important;
        font-weight: 400;
        position: relative;
    }
    
    /* Force override any inherited link styles */
    .toc-container a,
    .toc-container a:link,
    .toc-container a:visited {
        color: rgba(226, 232, 240, 0.9) !important;
    }
    
    /* Premium bullet for H3 */
    .toc-item.h3 a::after {
        content: '';
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        width: 5px;
        height: 5px;
        border-radius: 50%;
        background: linear-gradient(135deg, #F4B942, #FFA500);
        opacity: 0.6;
    }

    .toc-item a:hover {
        background-color: rgba(45, 55, 72, 0.08);
        color: var(--text-main, #1A202C) !important;
        transform: translateX(3px);
        padding-left: 1rem;
    }
    
    .toc-item.h3 a:hover {
        padding-left: 2.25rem;
    }
    
    /* Active state with glow */
    .toc-container .toc-list .toc-item a.active {
        color: var(--text-main, #1A202C) !important;
        background: linear-gradient(90deg, rgba(244, 185, 66, 0.15), rgba(244, 185, 66, 0.05));
        font-weight: 700;
        box-shadow: 0 2px 8px rgba(244, 185, 66, 0.2);
        transform: translateX(3px);
    }
    
    /* Premium scrollbar */
    .toc-container::-webkit-scrollbar { 
        width: 6px; 
    }
    .toc-container::-webkit-scrollbar-track {
        background: rgba(0, 0, 0, 0.02);
        border-radius: 10px;
    }
    .toc-container::-webkit-scrollbar-thumb { 
        background: linear-gradient(180deg, #F4B942, #75AADB);
        border-radius: 10px;
    }
    .toc-container::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(180deg, #FFA500, #5a95cb);
    }
</style>
