---
interface Props {
  title?: string;
  subtitle?: string;
  backgroundImage?: string;
}

const { 
  title = "INSTANTE TRIPS & TIPS", 
  subtitle = "Guías de viaje reales, sin filtros y directo al grano.",
  backgroundImage = "https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?auto=format&fit=crop&w=1920&q=80" 
} = Astro.props;
---

<section class="hero-section" style={`background-image: url('${backgroundImage}');`}>
  <div class="overlay"></div>
  
  <div class="hero-content">
    <span class="badge">BLOG DE VIAJES</span>
    <h1>{title}</h1>
    <p class="hero-subtitle">{subtitle}</p>
    
    <a href="#contenido-principal" class="scroll-indicator" aria-label="Ir al contenido">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7 13l5 5 5-5M7 6l5 5 5-5"/></svg>
    </a>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    /* REDUCIDO: De 65vh a 45vh (Más panorámico, menos alto) */
    height: 45vh; 
    min-height: 350px; /* Altura mínima de seguridad */
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    /* Margen inferior para separar del contenido */
    margin-bottom: -.5rem; 
  }

  .overlay {
    position: absolute; top: 0; left: 0; right: 0; bottom: 0;
    /* Gradiente un poco más oscuro para asegurar legibilidad */
    background: linear-gradient(to bottom, rgba(15, 23, 42, 0.4), rgba(15, 23, 42, 0.8));
    z-index: 1;
  }

  .hero-content {
    position: relative; z-index: 2; padding: 0 1.5rem; max-width: 800px;
    animation: fadeInUp 1s ease-out;
  }

  .badge {
    display: inline-block; background: #F4B942; color: #1A202C;
    font-family: 'Montserrat', sans-serif; font-weight: 800; font-size: 0.7rem;
    padding: 0.3rem 0.8rem; border-radius: 50px; margin-bottom: 1rem;
    letter-spacing: 2px; text-transform: uppercase;
  }

  h1 {
    font-family: 'Montserrat', sans-serif; font-size: 3rem; font-weight: 800;
    margin: 0 0 0.5rem 0; line-height: 1.1; text-transform: uppercase;
    text-shadow: 0 4px 15px rgba(0,0,0,0.5); /* Sombra más fuerte */
  }

  /* Clase específica para el subtítulo */
  .hero-subtitle {
    font-family: 'Montserrat', sans-serif; 
    font-size: 1.1rem; 
    font-weight: 500;
    line-height: 1.5; 
    margin: 0 auto; 
    max-width: 600px;
    
    /* FORZAMOS COLOR BLANCO Y SOMBRA */
    color: #ffffff !important; 
    text-shadow: 0 2px 4px rgba(0,0,0,0.8); /* Sombra negra para que se lea en fondo claro */
    opacity: 1;
  }

  .scroll-indicator {
    display: inline-flex; margin-top: 2rem; color: white; opacity: 0.8;
    animation: bounce 2s infinite; cursor: pointer; transition: opacity 0.3s;
  }
  .scroll-indicator:hover { opacity: 1; color: #F4B942; }

  @keyframes fadeInUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
  @keyframes bounce { 0%, 20%, 50%, 80%, 100% {transform: translateY(0);} 40% {transform: translateY(10px);} 60% {transform: translateY(5px);} }

  /* MÓVIL */
  @media (max-width: 768px) {
    .hero-section { 
        /* Aún más compacto en celular */
        height: 35vh; 
        min-height: 300px; 
        background-attachment: scroll; 
    }
    h1 { font-size: 2rem; }
    .hero-subtitle { font-size: 0.9rem; padding: 0 1rem; }
  }
</style>