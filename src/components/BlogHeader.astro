---
import { SITE } from '../config';
---

<header class="wrapper">
    <article>
        <h1>
            <a href="/">
                <img src="/logo.svg" alt={SITE.title} class="logo" />
            </a>
        </h1>
    </article>
</header>

<style>
    header {
        padding-top: 1rem;
        padding-bottom: 1rem;
        height: 5rem;
        background-color: var(--bg-body);
        border-bottom: 1px solid rgba(255,255,255,0.05);
    }

    article {
        display: flex;
        align-items: center;
        justify-content: space-between;
        max-width: 65ch; 
        margin: 0 auto;
        padding: 0 1rem;
    }

    h1 {
        margin: 0;
        font-size: 1.5rem;
        max-width: 100%;
        display: flex;
        flex-grow: 1;
    }

    h1 a {
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        color: var(--text-main);
    }
    
    /* --- CORRECCIÓN DEL LOGO --- */
    .logo {
        height: 45px; 
        width: auto; 
        object-fit: contain;

        /* 1. EL COLOR (Blanco nítido) */
        filter: grayscale(100%) invert(100%);

        /* 2. EL ANTÍDOTO PARA LA SOMBRA */
        /* !important obliga al navegador a ignorar la sombra global */
        box-shadow: none !important; 
        border-radius: 0 !important; /* También quitamos bordes redondeados por si acaso */
    }

    /* --- MODO CLARO (LIGHT MODE) --- */
    @media (prefers-color-scheme: light) {
        .logo {
            filter: none;
        }
    }

    /* Ajuste para móviles */
    @media (max-width: 32em) {
        .logo {
            height: 35px;
        }
    }
</style>