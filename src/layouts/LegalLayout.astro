---
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import Footer from '../components/Footer.astro';
import { SITE } from '../config';

const { title } = Astro.props;
---

<html lang="es">
<head>
    <BaseHead title={title} description={`Informaci√≥n legal de ${SITE.title}`} permalink={Astro.url.href} />
    <style>
        /* =========================================
           üõ°Ô∏è ZONA BLINDADA: VARIABLES GLOBALES
           (Copiado del index para mantener consistencia)
           ========================================= */
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;800&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=IBM+Plex+Serif:ital,wght@0,300;0,400;0,600;1,400&display=swap');

        :root {
            --page-bg: #F8F9FA; 
            --text-main: #2D3748;
            --text-prose: #4A5568; /* Un poco m√°s suave para lectura larga */
            --text-muted: #718096;
            --brand-blue: #75AADB;
            --brand-gold: #F4B942;
            --card-bg: #FFFFFF;
        }

        @media (prefers-color-scheme: dark) {
            :root {
                --page-bg: #0f172a; 
                --text-main: #f1f5f9;
                --text-prose: #cbd5e1;
                --text-muted: #94a3b8;
                --card-bg: #1e293b;
            }
        }

        body {
            background-color: var(--page-bg);
            color: var(--text-main);
            margin: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Asegura que el footer se vaya al fondo */
        }

        /* Estilos del Contenedor Legal */
        .legal-container {
            max-width: 800px;
            margin: 4rem auto;
            padding: 0 1.5rem;
            font-family: 'IBM Plex Serif', serif; /* Serif para mejor lectura legal */
            color: var(--text-main);
            flex: 1; /* Empuja el footer hacia abajo si hay poco texto */
        }

        h1 {
            font-family: 'Montserrat', sans-serif;
            font-size: 2.5rem;
            margin-bottom: 2rem;
            color: var(--text-main);
            font-weight: 800;
        }

        /* Estilos globales para el contenido inyectado (slot) */
        .legal-content :global(h2) { 
            margin-top: 2.5rem; 
            margin-bottom: 1rem;
            font-family: 'Montserrat', sans-serif; 
            font-size: 1.5rem; 
            font-weight: 600;
            color: var(--text-main);
        }
        .legal-content :global(p) { 
            line-height: 1.8; 
            margin-bottom: 1.2rem; 
            color: var(--text-prose); 
            font-size: 1.1rem;
        }
        .legal-content :global(ul) { 
            margin-bottom: 1.5rem; 
            padding-left: 1.5rem; 
        }
        .legal-content :global(li) { 
            margin-bottom: 0.5rem; 
            color: var(--text-prose); 
            line-height: 1.6;
        }
        .legal-content :global(strong) {
            color: var(--text-main);
            font-weight: 600;
        }
    </style>
</head>
<body>
    <BlogHeader />
    <main class="legal-container">
        <h1>{title}</h1>
        <div class="legal-content">
            <slot />
        </div>
    </main>
    <Footer />
</body>
</html>