{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.publicFolder": "public",
  "frontMatter.content.pageFolders": [
    {
      "title": "Mis Viajes",
      "path": "[[workspace]]/src/pages/posts"
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Título del Viaje",
          "name": "title",
          "type": "string",
          "single": true
        },
        {
          "title": "Descripción (SEO)",
          "name": "description",
          "type": "string",
          "rows": 3
        },
        {
          "title": "Fecha de Publicación",
          "name": "publishDate",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Autor (Slug)",
          "name": "author",
          "type": "string",
          "default": "default",
          "description": "Debe coincidir con src/data/authors.ts"
        },
        {
          "title": "A) Imagen de Portada (Local)",
          "name": "heroImage",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "B) O Pega un Link Externo",
          "name": "heroImageLink",
          "type": "string",
          "description": "Pega aquí una URL si no usas imagen local."
        },
        {
          "title": "Categorías",
          "name": "tags",
          "type": "tags",
          "default": []
        },
        {
          "title": "Diseño (NO BORRAR)",
          "name": "layout",
          "type": "string",
          "default": "../../layouts/BlogPost.astro",
          "hidden": false,
          "description": "Esto conecta el estilo visual. No lo borres."
        },
        {
          "title": "affiliateTitle",
          "name": "affiliateTitle",
          "type": "string"
        },
        {
          "title": "affiliateLink",
          "name": "affiliateLink",
          "type": "string"
        },
        {
          "title": "affiliateText",
          "name": "affiliateText",
          "type": "string"
        }
      ]
    }
  ]
}